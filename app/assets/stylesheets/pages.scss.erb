@mixin title($color, $align){
	font-size: 2rem;
	color: $color;
	text-align: $align;
}
@mixin border-top-bot($color){
	border-top: 1px solid $color;
	border-bottom: 1px solid $color;
}


.title-catalogo{
	@include title(white, center);
	@include border-top-bot(#c8c8c8);
}
@mixin bkg-img-mixin($b-size){
    position: relative;
	
    background-position: 50% 50%;
    background-repeat:   no-repeat;
    background-size:     $b-size;
    padding: 0;
    margin: 10px;
}

@mixin bkg-catalogue-img($w-size, $h-size,$b-size){
    position: relative;
	width: $w-size;
    height: $h-size;
    background-position: 50% 50%;
    background-repeat:   no-repeat;
    background-size:     $b-size;
    padding: 1%;
    margin: 0 auto;
}

.pro-box{
	@include bkg-img-mixin(cover);
	box-shadow: 0px 0px 2px #c8c8c885;
}


