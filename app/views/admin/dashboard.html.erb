<table class="table table-hover">
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Nombre</th>
      <th>Actions</th>
      <th></th>
    </tr>
  </thead>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.cod %></td>
      <td><%= product.tipo %></td>
      <td><%= link_to 'Editar', edit_product_path(product), class: 'btn btn-info' %></td>
      <td><%= link_to 'Borrar', product, method: :delete, data: { confirm: 'Estás seguro? borrar el producto eliminará tambien todas las fotos relacionados con él' }, class: 'btn btn-danger' %></td>
    </tr>
  <% end %>
</table>
